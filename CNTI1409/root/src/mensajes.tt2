[% BLOCK mensaje %]
<div class="mensaje">
	<div class="ui-widget">
		 <div class="ui-state-highlight ui-corner-all">
			 <p><span class="ui-icon ui-icon-info"></span>
			 <strong> Mensaje:  </strong> [% mensaje %]</p>
		</div>
	</div> 
</div>
[% END%]

[% BLOCK error %]
<div class="mensaje">
	<div class="ui-widget">
		 <div class="ui-state-error ui-corner-all" >
			 <p><span class="ui-icon ui-icon-info"></span>
			 <strong> Error:  </strong> [% mensaje %]</p>
		</div>
	</div> 
</div>
[% END%]

[% IF error %]
	[% PROCESS error %]
[% END %]
[% IF mensaje %]
	[% PROCESS mensaje %]
[% END%] 
