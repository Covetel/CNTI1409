    IF Catalyst.debug;
        # define a debug() macro directed to Catalyst's log
        MACRO debug(message) CALL Catalyst.log.debug(message);
    END;

    base = Catalyst.req.base;

    # Estructura de configuracin global de TTSite
    site = {
        title     => 'Validador CNTI',
